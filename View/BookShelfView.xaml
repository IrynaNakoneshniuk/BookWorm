<UserControl x:Class="BookWorm.View.BookShelfView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookWorm.View"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="1000" d:DesignWidth="830">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="10" Width="400" HorizontalAlignment="Left"
        Style="{StaticResource MaterialDesignOutlinedTextBox}"
        VerticalAlignment="Top"
        materialDesign:HintAssist.Hint="Введіть назву книги або автора"/>
        <Label Content="Читаю зараз" Grid.Row="1" Margin="10" FontSize="25" FontWeight="Bold" Foreground="Orange"/>
        <ListView Grid.Row="1" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="20">
                        <Border Background="White" Margin="20" Width="200" Height="200">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Slider 
                             Value="50"
                             Minimum="0"
                             Maximum="{Binding DiscreteHorizontal.Maximum}"
                             Style="{StaticResource MaterialDesignDiscreteSlider}"
                             TickFrequency="{Binding DiscreteHorizontal.TickFrequency}"
                             TickPlacement="BottomRight"
                             IsEnabled="False" />
                                <Image Grid.Row="1"></Image>
                                <TextBlock Grid.Row="2"></TextBlock>
                                <materialDesign:RatingBar Grid.Row="3"
                                x:Name="BasicRatingBar"
                                Value="3"
                                />
                            </Grid>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Content="Вибране" Grid.Row="2" Margin="10" FontSize="18" FontWeight="Bold"/>
        <ListView Grid.Row="2" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="20">
                        <Border Background="White" Margin="20" Width="200" Height="200">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Image Grid.Row="1"></Image>
                                <TextBlock Grid.Row="2"></TextBlock>
                            </Grid>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
